package View;

import Model.C;
import Model.Graphics;
import acm.program.GraphicsProgram;

public class DrawGame extends GraphicsProgram {

	public void drawGame() {
		Graphics.drawPaddle((C.WINDOW_WIDTH / 2), C.WINDOW_HEIGHT - (C.WINDOW_HEIGHT / 4));
		Graphics.drawBall((C.WINDOW_WIDTH / 2), C.WINDOW_HEIGHT - (C.WINDOW_HEIGHT / 4) + C.PADDLE_HEIGHT);
		for (int i = 0; i < C.N_BRICKS; i++) {
			Graphics.drawBrick(i * C.BRICK_WIDTH, i * C.BRICK_HEIGHT);
		}
	}
}
