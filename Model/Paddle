package Model;

import java.awt.Graphics;
import javax.swing.JComponent;

/**
 * Diese Klasse erstellt das Paddle.
 *
 */
public class Paddle extends JComponent {
	// this sets the position on the start, so depending on if we wanna move the
	// Paddle or recreate it we might have to give X and Y to Params.
	public void paint(Graphics g) {
		g.drawRect((C.WINDOW_WIDTH / 2), C.WINDOW_HEIGHT - (C.WINDOW_HEIGHT / 4), C.PADDLE_WIDTH, C.PADDLE_HEIGHT);
	}
}
